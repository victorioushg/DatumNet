@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http

@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "signin";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="login100-form ">
                <span class="login100-form-title p-b-33">
                    <img src="~/images/logoAzul.jpg" width="60" height="60" alt="">
                    Account Login
                </span>
                <div class="wrap-input100 ">
                    <input asp-for="Email" class="input100" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="wrap-input100 ">
                    <input asp-for="Password" class="input100" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
              
                <div class="container-login100-form-btn m-t-20">
                    <button type="submit" class="login100-form-btn">Sign in</button>
                </div>

                <div class="text-center p-t-45 p-b-4"  >
                    <span class="txt1">
                        Create an account?
                    </span>

                    <a asp-controller="Account" asp-action="Register" class="txt2 hov1">
                        Sign up
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
