@{
    ViewData["Title"] = "asientos contables";
}

<link rel="stylesheet" type="text/css" href="~/css/pages/policies.css">

<div id="container" class="row m-1">
    <div id="policies" class="col-lg-3">
        <div id="encabGrid"></div>
    </div>
    <div id="linesTab" class="col-lg-9">
    </div>
</div>

<div id="lines">
    <div id="linesGrid">
    </div>
</div>


<div id="toolbarTemplate" style="display:none">
    <div id="datetimepicker">
        <input id="dtpStartEndDates">
    </div>
</div>

<script id="cellTemplate" type="text/x-template">
    <div class="card">
        <div class="container">
            <div class="row">
                <p>${policyCode}</p>
            </div>
            <div class="row">
                <p>${new Date(policyDate).toLocaleDateString()}</p>
            </div>
            <div class="row">
                <p class="card-text-bold">${description}</p>
            </div>
            
        </div>
    </div>
</script>

<script src="~/Scripts/pages/policies.js" asp-append-version="true"></script>
